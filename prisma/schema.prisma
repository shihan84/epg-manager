generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String?
  role          UserRole @default(CLIENT)
  companyName   String?
  isActive      Boolean  @default(true)
  epgUrl        String?
  lastLoginAt   DateTime?
  loginAttempts Int      @default(0)
  lockedUntil   DateTime?
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  channels      Channel[]
  programs      Program[]
  epgFiles      EpgFile[]
  auditLogs     AuditLog[]
  apiKeys       ApiKey[]
  enterpriseLicense EnterpriseLicense?
  subscription  Subscription?
  billingHistory BillingHistory[]
  
  @@index([email])
  @@index([role])
  @@index([isActive])
  @@index([createdAt])
  @@map("users")
}

model Channel {
  id          String   @id @default(cuid())
  name        String
  displayName String?
  description String?
  logoUrl     String?
  streamUrl   String?
  number      Int?
  language    String?  @default("en") // Language code (en, hi, ta, te, etc.)
  region      String?  @default("IN") // Region code (IN, US, etc.)
  isActive    Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedules   Schedule[]
  
  @@index([userId])
  @@index([isActive])
  @@index([language])
  @@index([region])
  @@index([createdAt])
  @@index([userId, isActive])
  @@map("channels")
}

model Program {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String?
  duration    Int?     // in minutes
  imageUrl    String?
  thumbnailUrl String? // Smaller thumbnail for EPG display
  language    String?  @default("en") // Language code (en, hi, ta, te, etc.)
  region      String?  @default("IN") // Region code (IN, US, etc.)
  isRepeat    Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedules   Schedule[]
  
  @@index([userId])
  @@index([category])
  @@index([language])
  @@index([region])
  @@index([createdAt])
  @@index([userId, category])
  @@map("programs")
}

model Schedule {
  id          String   @id @default(cuid())
  channelId   String
  programId   String
  startTime   DateTime
  endTime     DateTime
  isLive      Boolean  @default(false)
  isNew       Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  channel     Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  
  @@index([channelId])
  @@index([programId])
  @@index([startTime])
  @@index([endTime])
  @@index([startTime, endTime])
  @@index([isLive])
  @@index([isNew])
  @@map("schedules")
}

model EpgFile {
  id          String   @id @default(cuid())
  filename    String
  content     String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("epg_files")
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String
  resource    String
  resourceId  String
  details     Json
  ip          String
  userAgent   String
  timestamp   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("audit_logs")
}

model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  userId      String
  permissions Json     // Array of permissions
  isActive    Boolean  @default(true)
  lastUsed    DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("api_keys")
}

model SystemConfig {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("system_config")
}

model EnterpriseLicense {
  id          String   @id @default(cuid())
  userId      String   @unique
  type        String   // basic, professional, enterprise
  features    Json     // Array of features
  limits      Json     // Usage limits
  expiresAt   DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("enterprise_licenses")
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  adminUserId String
  settings    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("organizations")
}

model Webhook {
  id          String   @id @default(cuid())
  userId      String
  url         String
  events      Json     // Array of events
  secret      String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("webhooks")
}

model SSOConfig {
  id          String   @id @default(cuid())
  userId      String
  provider    String   // saml, oauth
  config      Json
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("sso_configs")
}

model SubscriptionPlan {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  price       Float    // Monthly price
  features    Json     // Array of features
  limits      Json     // Usage limits
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  subscriptions Subscription[]
  
  @@map("subscription_plans")
}

model Subscription {
  id              String   @id @default(cuid())
  userId          String   @unique
  planId          String
  status          SubscriptionStatus @default(ACTIVE)
  startDate       DateTime @default(now())
  endDate         DateTime?
  nextBillingDate DateTime
  autoRenew      Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan            SubscriptionPlan @relation(fields: [planId], references: [id])
  billingHistory  BillingHistory[]
  
  @@index([userId])
  @@index([status])
  @@index([nextBillingDate])
  @@index([status, nextBillingDate])
  @@map("subscriptions")
}

model BillingHistory {
  id             String   @id @default(cuid())
  userId         String
  subscriptionId String
  amount         Float
  status         BillingStatus @default(PENDING)
  billingDate    DateTime @default(now())
  dueDate        DateTime
  paidDate       DateTime?
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([subscriptionId])
  @@index([status])
  @@index([billingDate])
  @@index([dueDate])
  @@index([userId, status])
  @@map("billing_history")
}

enum UserRole {
  ADMIN
  CLIENT
}

enum SubscriptionStatus {
  ACTIVE
  SUSPENDED
  CANCELLED
  EXPIRED
  PENDING
}

enum BillingStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
  REFUNDED
}