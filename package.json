    "docker:build": "docker build -t epg-manager .",
    "docker:run": "docker run -p 3000:3000 epg-manager",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "copyright": "echo 'EPG Manager - Copyright © 2024 Ultimate News Web Media Production Pvt Ltd' && echo 'Website: https://itassist.co.in' && echo 'Email: info@itassist.co.in'",
